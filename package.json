		"prettier": "^2.7.1",
		"prettier-plugin-svelte": "^2.8.0",
		"svelte": "^3.52.0",
		"svelte-check": "^2.9.2",
		"svelte-preprocess": "^4.10.7",
		"typescript": "^4.8.4",
		"vite": "^3.2.1"
	},
	"dependencies": {
		"npm-run-all": "^4.1.5",
		"svelte-browser": "^0.4.2",
		"svelte-petit-utils": "^0.3.0",
